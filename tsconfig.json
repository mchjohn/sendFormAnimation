{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ESNext",],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types"],
    "module": "CommonJS",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "lint": {
          "validProperties": [
            "elevation",
            "padding-vertical",
            "padding-horizontal"
          ]
        }
      }
    ]
  }
}
